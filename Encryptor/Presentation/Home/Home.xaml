<Window x:Class="Encryptor.Presentation.Home.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Encryptor.Presentation.Home"
        mc:Ignorable="d"
        Title="Home" Height="300" Width="490">
    <Grid>
        <Label x:Name="NameLabel" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="33.333"/>
        <Label x:Name="NameLabel_Copy" Content="What would you like to do?" HorizontalAlignment="Left" Margin="96,90,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="20"/>
        <Button x:Name="EncryptStringButton" Content="Encrypt string for other user" HorizontalAlignment="Left" Margin="103,129,0,0" VerticalAlignment="Top" Width="236" FontFamily="Tahoma" FontSize="16" Height="33" Click="EncryptStringButton_Click"/>
        <Button x:Name="DescryptStringButton" Content="Decrypt string from other user" HorizontalAlignment="Left" Margin="103,167,0,0" VerticalAlignment="Top" Width="236" FontFamily="Tahoma" FontSize="16" Height="33" Click="DescryptStringButton_Click"/>

    </Grid>
</Window>
